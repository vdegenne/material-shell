{
	"name": "material-shell",
	"type": "module",
	"description": "Shell element for material app.",
	"version": "1.2.1",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"module": "./lib/index.js",
	"exports": {
		".": {
			"import": "./lib/index.js",
			"default": "./lib/index.js",
			"types": "./lib/index.d.ts"
		},
		"./vite.js": {
			"default": "./lib/vite/index.js",
			"types": "./lib/vite/index.d.ts"
		},
		"./material-shell/*": "./lib/material-shell/*"
	},
	"scripts": {
		"dev": "wds",
		"build": "wireit",
		"build:ts": "wireit"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"build:ts",
				"build:rollup"
			]
		},
		"build:ts": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"tsconfig.json",
				"src"
			],
			"output": [
				"lib"
			]
		},
		"build:copy-css-files": {
			"command": "rsync -av --include='*.css' src/lib/ lib/",
			"output": [
				"lib/material-styles/*.css"
			],
			"dependencies": [
				"build:ts"
			]
		},
		"build:rollup": {
			"command": "rollup -c",
			"files": [
				"rollup.config.js"
			],
			"dependencies": [
				"build:ts",
				"build:copy-css-files"
			],
			"output": [
				"./material-shell.js"
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vdegenne/material-shell.git"
	},
	"author": "Valentin Degenne",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/vdegenne/material-shell/issues"
	},
	"homepage": "https://github.com/vdegenne/material-shell#readme",
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@material/web": "^1.1.1",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-terser": "^0.4.4",
		"@types/clean-css": "^4.2.11",
		"@web/dev-server": "^0.4.1",
		"@web/dev-server-esbuild": "^1.0.1",
		"lit": "^3.1.0",
		"material-shell": "^1.2.1",
		"rollup": "^4.9.5",
		"rollup-plugin-css-modules": "^0.1.2",
		"rollup-plugin-minify-template-literals": "^1.1.4",
		"typescript": "^5.3.3",
		"vite": "^4.5.1",
		"wireit": "^0.14.1"
	},
	"files": [
		"/material-styles.js",
		"/material-shell.js",
		"/lib"
	]
}
